<project name="db-browser-db2" xmlns:if="ant:if" xmlns:unless="ant:unless">
  
  <condition property="isWindows">
    <os family="windows"/>
  </condition>

  <condition property="isUnix">
    <os family="unix"/>
  </condition>

  <condition property="isZos">
    <os family="z/os"/>
  </condition>
  
  <target name="build">
    <mkdir dir="../lib/node_modules/"/>
    <copy todir="../lib/node_modules/" if:set="isWindows"> <fileset dir ="../nodeServer/node_modules"  includes="**" />
    </copy>
    <exec if:set="isUnix" executable="sh">
      <arg line="-c 'cp -pR ../nodeServer/node_modules/* ../lib/node_modules/'"/>
    </exec>   
    <exec if:set="isZos" executable="sh">
      <arg line="-c 'cp -pR ../nodeServer/node_modules/* ../lib/node_modules/'"/>
    </exec>    
  </target>
</project>

